@model List<ListaSupermercado2.Models.Produto>

@{
    ViewBag.Title = "Listar";
}

<h2>Listar</h2>

<table>
    <thead>
        <tr>Id</tr>
        <tr>Produto</tr>
        <tr>Excluir</tr>
        <tr>Editar</tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.ProdutoId</td>
                <td>@p.Nome</td>
                <td>@Html.ActionLink("Deletar", "Deletar", new { id = @p.ProdutoId })</td>
                <td>@Html.ActionLink("Editar", "Editar", new { id = @p.ProdutoId }, new { @class = "btn btn-info btn-sm" })</td>
            </tr>
        }
    </tbody>
</table>