@model List<ListaSupermercado2.Models.Lista>


@{
    ViewBag.Title = "Listar";
}

<h2>Listar</h2>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th class="text-center">Id</th>
            <th class="text-center">Produto</th>
            <th class="text-center">Quantidade</th>
            <th class="text-center">Excluir</th>
            <th class="text-center">Editar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td class="text-center">@p.ListaId</td>
                <td class="text-center">@p.Nome</td>
                <td class="text-center">@p.Quantidade</td>
                <td class="text-center">@Html.ActionLink("Deletar", "Deletar", new { id = @p.ListaId }, new { @class = "btn btn-warning btn-sm" })</td>
                <td class="text-center">@Html.ActionLink("Editar", "Editar", new { id = @p.ListaId }, new { @class = "btn btn-info btn-sm" })</td>
            </tr>
        }
    </tbody>
</table>