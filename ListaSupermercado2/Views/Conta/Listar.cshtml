@model List<ListaSupermercado2.Models.Conta>
@{
    ViewBag.Title = "Listar";
}

<h2>Lista de usuarios</h2>

<table>
    <thead>
        <tr>Id</tr>
        <tr>Usuario</tr>
        <tr>Senha</tr>
        <tr>Excluir</tr>
        <tr>Editar</tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.ContaId</td>
                <td>@c.Usuario</td>
                <td>@c.Senha</td>
                <td>@Html.ActionLink("Deletar", "Deletar", new { id = @c.ContaId })</td>
                <td>@Html.ActionLink("Editar", "Editar", new { id = @c.ContaId }, new { @class = "btn btn-info btn-sm" })</td>
            </tr>    
        }
    </tbody>
</table>